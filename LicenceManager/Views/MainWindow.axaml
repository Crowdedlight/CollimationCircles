<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LicenceManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="650"
        x:Class="LicenceManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LicenceManager"
        Height="600"
        Width="800">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <StackPanel
    Orientation="Vertical"
    Spacing="10"
    Margin="10">

    <StackPanel Orientation="Vertical" Spacing="10">
      <TextBlock>Pass phrase:</TextBlock>
      <TextBox
        Text="{ReflectionBinding PassPhrase}"
        Watermark="Enter pass phrase here"/>
      <TextBlock>Private Key:</TextBlock>
      <TextBox
        Text="{ReflectionBinding PrivateKey}"
        Watermark="Private key will appear here"/>
      <TextBlock>Public Key:</TextBlock>
      <TextBox
        Watermark="Public key will appear here"
        Text="{ReflectionBinding PublicKey}" />
    </StackPanel>
    <Button
      Content="Create Keys"
      Command="{ReflectionBinding CreateKeysCommand}"/>

    <TextBlock>Client ID:</TextBlock>
    <TextBox
      Text="{ReflectionBinding ClientId}"
      Watermark="Enter client ID here (GUID received from client)"/>

    <TextBlock>Product:</TextBlock>
    <UniformGrid Columns="2">
      <TextBox
        Margin="0 0 5 0"
        Text="{ReflectionBinding Product}"
        Watermark="Enter product name here (e.g., Best Product)"/>
      <TextBox
        Margin="5 0 0 0"
        Text="{ReflectionBinding MajorProductVersion}"
        Watermark="Enter major product version here (e.g., 4)"/>
    </UniformGrid>

    <TextBlock>Customer:</TextBlock>
    <UniformGrid Columns="2">
      <TextBox
        Margin="0 0 5 0"
        Text="{ReflectionBinding LicensedTo}"
        Watermark="Enter user first and last name (e.g., John Doe)"/>
      <TextBox
        Margin="5 0 0 0"
        Text="{ReflectionBinding LicensedToEmail}"
        Watermark="Enter user email (e.g., john.doe@gmail.com)"/>
    </UniformGrid>

    <StackPanel Orientation="Horizontal">
      <TextBlock Margin="0 5 0 0">Is trial license</TextBlock>
      <CheckBox
        Margin="5 0 0 0"
        Name="trialLicence"
        IsChecked="{ReflectionBinding TrialLicence}" />

      <TextBlock Margin="0 5 0 0">and is valid for</TextBlock>
      <TextBox
        IsEnabled="{ReflectionBinding #trialLicence.IsChecked}"
        Margin="5 0 5 0"
        Text="{ReflectionBinding TrialLicenceDaysUntilExpiration}" />
      <TextBlock Margin="0 5 0 0">days</TextBlock>

    </StackPanel>

    <Button
      Content="Create Licence"
      Command="{ReflectionBinding CreateLicenceCommand}"/>

    <TextBlock Text="{ReflectionBinding SerializedLicense}" />
  </StackPanel>

</Window>
