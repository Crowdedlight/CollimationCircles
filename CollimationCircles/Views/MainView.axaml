<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CollimationCircles.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:CollimationCircles.Resources.Strings"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CollimationCircles.Views.MainView"
        Icon="/Resources/Images/ic_launcher.png"
        Title="{Binding MainTitle}"
		    Background="Transparent"
        TransparencyBackgroundFallback="Transparent"
        Width="{Binding Width, Mode=TwoWay}"
        Height="{Binding Height, Mode=TwoWay}">
  <Grid RowDefinitions="64,*">
    <Button
      Grid.Row="0"
      HorizontalAlignment="Right"
      VerticalAlignment="Top"
      ToolTip.Tip="{DynamicResource Text.SettingsWindow}"
      Width="64"
      Height="64"
      Command="{Binding ShowSettingsCommand}">
      <Image Source="/Resources/Images/ic_settings_dark.png" />
    </Button>
    <Border
      Grid.Row="1"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Background="#2AEDEDED"
      CornerRadius="3"      
      Padding="5"
      Width="64"
      Height="64"
      ToolTip.Tip="{DynamicResource Text.MoveWindow}">
      <Image Source="/Resources/Images/arrow_keys.png" />
    </Border>
  </Grid>
</Window>
