<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:CollimationCircles.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CollimationCircles.Views.SettingsUserControl">
  <TabControl>
    <TabItem>
      <TabItem.Header>
        <TextBlock
          FontSize="14"
          Text="{DynamicResource Text.Properties}" />
      </TabItem.Header>
      <ScrollViewer>
        <views:HelperListUserControl/>
      </ScrollViewer>
    </TabItem>
    <TabItem>
      <TabItem.Header>
        <TextBlock
          FontSize="14"
          Text="{DynamicResource Text.Settings}" />
      </TabItem.Header>
      <views:SettingsTabUserControl />
    </TabItem>
    <TabItem>
      <TabItem.Header>
        <TextBlock
          FontSize="14"
          Text="{DynamicResource Text.About}" />
      </TabItem.Header>
      <views:AboutTabUserControl/>
    </TabItem>
  </TabControl>
</UserControl>
