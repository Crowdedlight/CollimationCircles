<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CollimationCircles.Controls.SettingsTabUserControl"
             xmlns:vm="using:CollimationCircles.ViewModels"
             x:DataType="vm:SettingsViewModel">
  <WrapPanel>

    <StackPanel      
      Width="{Binding SettingsWidth}"
      Margin="12">
      <StackPanel Orientation="Vertical">

        <Grid
          ColumnDefinitions="*,95"
          RowDefinitions="40,40">
          <TextBlock
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.UserInterfaceLanguage}"
            VerticalAlignment="Center"/>
          <ComboBox
            Grid.Column="1"
            HorizontalAlignment="Right"
            ItemsSource="{Binding LanguageList}"
            SelectedItem="{Binding SelectedLanguage}">
            <ComboBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Key}" />
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
          <TextBlock
            Grid.Row="1"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.UserInterfaceTheme}"
            VerticalAlignment="Center"/>
          <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Right"
            ItemsSource="{Binding ThemeList}"
            SelectedItem="{Binding SelectedTheme}">
            <ComboBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding}" />
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
        </Grid>

        <Grid ColumnDefinitions="*,20" RowDefinitions="40,40,40">
          <TextBlock
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.CheckForNewVersion}"
            VerticalAlignment="Center"/>
          <CheckBox
            Grid.Column="1"
            IsChecked="{Binding CheckForNewVersionOnStartup}" />
          <TextBlock
            Grid.Row="1"
            TextWrapping="WrapWithOverflow"
            RelativePanel.Below="CheckForNewVersion"
            Text="{DynamicResource Text.StayOnTop}"
            VerticalAlignment="Center"/>
          <CheckBox
            Grid.Row="1"
            Grid.Column="1"
            IsChecked="{Binding AlwaysOnTop}" />
          <TextBlock
            Grid.Row="2"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.ShowMarkAtSelectedItem}"
            VerticalAlignment="Center"/>
          <CheckBox
            Grid.Row="2"
            Grid.Column="1"
            IsChecked="{Binding ShowMarkAtSelectedItem}" />
        </Grid>

      </StackPanel>
    </StackPanel>

    <StackPanel
      Width="{Binding SettingsWidth}"
      Margin="12">
      <TextBlock Text="{DynamicResource Text.KeyboardShortcuts}"/>
      <StackPanel Orientation="Vertical">

        <Grid
          RowDefinitions="30,30,30,30,30,30,30,30,30,30,30,30,30,30"
          ColumnDefinitions="*,50" >
          <TextBlock
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.GlobalRotationCW}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Column="1"
            Text="CTRL R"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="1"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.GlobalRotationCCW}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="CTRL F"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="2"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.GlobalScaleUp}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Text="CTRL +"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="3"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.GlobalScaleDown}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Text="CTRL -"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="4"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.RotateHelperCW}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Text="CTRL Q"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="5"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.RotateHelperCCW}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            Text="CTRL A"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="6"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.IncreaseHelperRadius}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Text="CTRL W"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="7"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.DecreaseHelperRadius}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="7"
            Grid.Column="1"
            Text="CTRL S"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="8"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.IncreaseHelperCount}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="8"
            Grid.Column="1"
            Text="CTRL T"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="9"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.DecreaseHelperCount}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="9"
            Grid.Column="1"
            Text="CTRL G"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="10"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.IncreaseHelperSpacing}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="10"
            Grid.Column="1"
            Text="CTRL Z"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="11"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.DecreaseHelperSpacing}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="11"
            Grid.Column="1"
            Text="CTRL H"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="12"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.IncreaseItemThichness}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="12"
            Grid.Column="1"
            Text="CTRL E"
            VerticalAlignment="Center"/>

          <TextBlock
            Grid.Row="13"
            TextWrapping="WrapWithOverflow"
            Text="{DynamicResource Text.DecreaseItemThickness}"
            VerticalAlignment="Center"/>
          <TextBlock
            Grid.Row="13"
            Grid.Column="1"
            Text="CTRL D"
            VerticalAlignment="Center"/>
        </Grid>

      </StackPanel>
    </StackPanel>

  </WrapPanel>

</UserControl>