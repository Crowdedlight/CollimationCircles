<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CollimationCircles.Controls.StreamUserControl"
             xmlns:vm="using:CollimationCircles.ViewModels"
             x:DataType="vm:StreamViewModel">

  <DockPanel
    Margin="12">
    <StackPanel
      Orientation="Vertical"
      DockPanel.Dock="Top">
      <TextBlock
        Text="{DynamicResource Text.StreamURL}"
        VerticalAlignment="Center"/>
      <TextBox
        Text="{Binding MediaUri, Mode=TwoWay}"
        TextWrapping="Wrap"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"/>
      <Button
        HorizontalContentAlignment="Center"
        HorizontalAlignment="Stretch"
        Content="{Binding ButtonTitle}"
        Command="{Binding PlayPauseCommand}"/>
      <TextBlock
        Text="Example how to start libcamera stream"
        VerticalAlignment="Center"/>
      <TextBox
        IsReadOnly="true"
        Text="{DynamicResource Text.StreamCommandExample}"
        VerticalAlignment="Center"
        TextWrapping="Wrap"/>
      <TextBlock
        Text="Example of URL from libcamera stream"
        VerticalAlignment="Center"/>
      <TextBox
        IsReadOnly="true"
        Text="{DynamicResource Text.StreamURLExample}"
        VerticalAlignment="Center"
        TextWrapping="Wrap"/>
    </StackPanel>
    <StackPanel
      VerticalAlignment="Bottom"
      Orientation="Vertical"
      DockPanel.Dock="Bottom">
      <TextBlock
        Text="Stream log"
        VerticalAlignment="Center"/>
      <TextBox
        IsReadOnly="true"
        MaxLines="3"
        Height="80"
        Text="{Binding MediaPlayerLog}"
        VerticalAlignment="Center"
        TextWrapping="Wrap"/>
    </StackPanel>
  </DockPanel>

</UserControl>
