<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250"
             d:DesignHeight="400"
             x:Class="CollimationCircles.Controls.CameraPropertiesUserControl"
             xmlns:vm="using:CollimationCircles.ViewModels"
             x:DataType="vm:CameraControlsViewModel">
  <UserControl.Styles>
    <Style Selector="TextBox">
      <Setter Property="FontSize" Value="10" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="Margin" Value="0" />
      <Setter Property="MinHeight" Value="0" />
      <Setter Property="MinWidth" Value="0" />
      <Setter Property="Width" Value="30" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <Style Selector="Slider">
      <Setter Property="MinHeight" Value="0" />
      <Setter Property="Height" Value="35" />
    </Style>
  </UserControl.Styles>
  <StackPanel
    Orientation="Vertical"
    IsEnabled="{Binding IsOpened}">
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock >Brightness:</TextBlock>
      <TextBox
        Text="{Binding Brightness}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Brightness}"
        Minimum="{Binding BrightnessMin}"
        Maximum="{Binding BrightnessMax}" />
    </Grid>
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock>Contrast:</TextBlock>
      <TextBox
        Text="{Binding Contrast}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Contrast}"
        Minimum="{Binding ContrastMin}"
        Maximum="{Binding ContrastMax}"/>
    </Grid>
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock>Saturation:</TextBlock>
      <TextBox
        Text="{Binding Saturation}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Saturation}"
        Minimum="{Binding SaturationMin}"
        Maximum="{Binding SaturationMax}"/>
    </Grid>
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock>Gamma:</TextBlock>
      <TextBox
        Text="{Binding Gamma}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Gamma}"
        Minimum="{Binding GammaMin}"
        Maximum="{Binding GammaMax}"/>
    </Grid>
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock>Hue:</TextBlock>
      <TextBox
        Text="{Binding Hue}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Hue}"
        Minimum="{Binding HueMin}"
        Maximum="{Binding HueMax}"/>
    </Grid>
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock>Sharpness:</TextBlock>
      <TextBox
        Text="{Binding Sharpness}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Sharpness}"
        Minimum="{Binding SharpnessMin}"
        Maximum="{Binding SharpnessMax}"/>
    </Grid>
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock>Zoom:</TextBlock>
      <TextBox
        Text="{Binding Zoom}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Zoom}"
        Minimum="{Binding ZoomMin}"
        Maximum="{Binding ZoomMax}"/>
    </Grid>
    <Grid
      ColumnDefinitions="*,Auto"
      RowDefinitions="20,22">
      <TextBlock>Gain:</TextBlock>
      <TextBox
        Text="{Binding Gain}"
        Grid.Column="1"/>
      <Slider
        Grid.RowSpan="2"
        Grid.ColumnSpan="2"
        Value="{Binding Gain}"
        Minimum="{Binding GainMin}"
        Maximum="{Binding GainMax}"/>
    </Grid>
    <Grid
      ColumnDefinitions="Auto,*,Auto"
      RowDefinitions="20,22">
      <TextBlock Text="Focus:"/>
      <TextBox
        IsEnabled="{Binding !#autoFocus.IsChecked}"
        Text="{Binding Focus}"
        Grid.Column="2"/>
      <Slider
        IsEnabled="{Binding !#autoFocus.IsChecked}"
        Grid.RowSpan="2"
        Grid.ColumnSpan="3"
        Value="{Binding Focus}"
        Minimum="{Binding FocusMin}"
        Maximum="{Binding FocusMax}"/>
      <CheckBox
        Name="autoFocus"
        HorizontalAlignment="Right"
        Content="Auto"        
        Grid.Column="1"
        IsChecked="{Binding Autofocus}"/>
    </Grid>
  </StackPanel>
</UserControl>
